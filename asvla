#!/usr/local/bin/python3

from sys import argv
import subprocess

if argv[1] == 'db:pull':
  process = subprocess.Popen(
    ['mongodump', '--uri=mongodb+srv://heroku:K5LmJBnN11sQKeo3@cluster0.putle.mongodb.net'], 
    cwd='/Users/antonkhamets'
  )
  process.wait()
  process = subprocess.Popen(
    ['mongorestore'], 
    cwd='/Users/antonkhamets'
  )
  process.wait()