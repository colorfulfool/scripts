#!/usr/bin/bash
case $1 in
  dev)
    test-with-file .git/HEAD bin/tools/dev/bun-install-run-dev.sh 3000
    ;;
  story|storybook)
    test-with-file .git/HEAD bin/tools/dev/bun-install-run-storybok.sh 6006
    ;;
  build)
    bun run build
    ;;
  check|typecheck)
    bunx tsc --noEmit
    ;;
  *)
    echo "Supported commands: dev, storybook"
    ;;
esac
